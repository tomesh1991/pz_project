<UserControl x:Class="Monitor_kl2.Views.MonitorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:local ="clr-namespace:Monitor_kl2"
             >

    <UserControl.Resources>
        <local:HostStatusToColorConverter x:Key="StatusConverter" />
    </UserControl.Resources>
    <DockPanel>
        <TextBlock DockPanel.Dock="Bottom" Text="{Binding Status}" />
        <DockPanel  Margin="5" DockPanel.Dock="Top">
            <TextBlock Text="Liczba widocznych hostów" DockPanel.Dock="Left" />
            <xctk:DecimalUpDown Margin="5 0 0 0" DockPanel.Dock="Left" Value="{Binding NumberOfVisibleHosts}" />
            <Button Name="Print" Content="Drukuj" Height="25" Width="70"  HorizontalAlignment="Right" DockPanel.Dock="Right"></Button>
            
        </DockPanel>

        <DataGrid x:Name="HostList">
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow" >
                    <Setter Property="Background">
                        <Setter.Value>
                            <SolidColorBrush Color="{Binding CurrentStatus, Converter={StaticResource StatusConverter}}" />
                        </Setter.Value>
                    </Setter>
                </Style>
            </DataGrid.RowStyle>
        </DataGrid>
    </DockPanel>
</UserControl>
