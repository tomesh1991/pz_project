<Window x:Class="Monitor_kl2.Views.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:cal="clr-namespace:Caliburn.Micro;assembly=Caliburn.Micro.Platform"
        Title="ShellView" Height="300" Width="300">
    <DockPanel>
        <DockPanel  DockPanel.Dock="Top"  Margin="10 5 10 5">
            <TextBlock Text="Adres" DockPanel.Dock="Left"  VerticalAlignment="Center" />
            <Button Name="Connect" Content="Połącz" DockPanel.Dock="Right"  Height="25" Width="70" />
            <TextBox Name="Address" Margin="5" />
        </DockPanel>
        <TabControl Name="Items">
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" >
                        <TextBlock Text="{Binding DisplayName}" Margin="3" VerticalAlignment="Center"/>
                        <Button Name="Close" Content="X" cal:Message.Attach="DeactivateItem($dataContext, 'true')" />
                    </StackPanel>
                   
                </DataTemplate>  
            </TabControl.ItemTemplate>
        </TabControl>    
    </DockPanel>
</Window>
